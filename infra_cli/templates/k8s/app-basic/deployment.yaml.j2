apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name }}
  namespace: {{ namespace | default("default") }}
spec:
  replicas: 2
  selector:
    matchLabels: { app: {{ name }} }
  template:
    metadata: { labels: { app: {{ name }} } }
    spec:
      containers:
        - name: {{ name }}
          image: {{ image | default("nginx:latest") }}
          ports: [{ containerPort: {{ port | default(8080) }} }]
